<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.wit.mytweet">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".app.MyTweetApp">
        <activity android:name=".activities.TweetActivityWelcome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.TweetActivitySignup"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name=".activities.TweetActivityFollowing"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name=".activities.TweetActivityLogin"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name=".activities.TweetActivityList"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name=".activities.SocialActivityList"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name=".activities.TweetActivity"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name=".activities.TweetSettings"
            android:label="@string/app_name">
        </activity>



    </application>

</manifest>